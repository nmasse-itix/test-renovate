{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dockerfile": {
    "fileMatch": ["Containerfile"]
  },
  "enabledManagers": ["ansible", "ansible-galaxy", "dockerfile", "git-submodules", "helmv3", "kustomize", "regex"],
  "git-submodules": {
    "enabled": true
  },
  "registryAliases": {
    "nextcloud": "https://nextcloud.github.io/helm/"
  },
  "regexManagers": [
    {
      "fileMatch": ["^ansible/group_vars/all/versions.yaml$"],
      "matchStrings": [
        "renovate:\\s+datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_version:\\s+[\"']?(?<currentValue>[^'\"]*)[\"']?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
