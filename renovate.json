{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dockerfile": {
    "fileMatch": ["Containerfile"]
  },
  "enabledManagers": ["ansible", "ansible-galaxy", "dockerfile", "git-submodules", "helmv3", "kustomize"],
  "registryAliases": {
    "nextcloud": "https://nextcloud.github.io/helm/"
  },
  "kubernetes": {
    "fileMatch": ["^tekton/[^/]*\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["^ansible/group_vars/all/versions.yaml$"],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_version:\\s+\"?(?<currentValue>.*)\"?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
